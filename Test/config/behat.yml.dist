default:
    paths:
        features: features
        bootstrap: %behat.paths.features%/bootstrap
    formatter:
        name: pretty
    extensions:
        Behat\MinkExtension\Extension:
            base_url: 'http://localhost'
            goutte:    ~
            selenium2: ~
            default_session: goutte
            javascript_session: selenium2
            browser_name: firefox

# Read the documention on http://extensions.behat.org/symfony2/index.html if you want to use the Symfony2 extension
